<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    tools:context="com.platelkevin.newsstream.newsstream.NewsFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/background"
        android:layout_marginBottom="@dimen/margin_bottom"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:id="@+id/titleContent"
                >
                <!--<TextView-->
                    <!--android:id="@+id/colorBand"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="10dp"-->
                    <!--android:text=""-->
                    <!--android:textColor="@color/background"-->
                    <!--android:background="@color/colorPrimaryDark"-->
                    <!--/>-->
                <TextView
                    android:id="@+id/from"
                    android:textSize="@dimen/title_size"
                    android:text="@string/news_image_desc"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/background"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/default_padding"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgUrl"
                android:contentDescription="@string/news_image_desc"
                android:layout_width="match_parent"
                android:src="@drawable/plus"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:minHeight="100dp"
                android:layout_below="@+id/titleContent"
                />
            <TextView
                android:id="@+id/title"
                android:text="@string/news_image_desc"
                android:textStyle="bold"
                android:textSize="@dimen/title_size"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgUrl"
                />
            <TextView
                android:id="@+id/date"
                android:text="@string/news_image_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginBottom="@dimen/margin_bottom"
                />
            <TextView
                android:id="@+id/content"
                android:text="@string/news_image_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                />
            <TextView
                android:id="@+id/spacer"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_below="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000"
                />
            <LinearLayout
                android:layout_below="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_bottom"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_menu_share"
                    android:background="@color/background"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
